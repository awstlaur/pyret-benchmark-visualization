#!/usr/bin/env python

from os import listdir

report_dir = '/home/awstlaur/pyret-benchmark-visualization/report/'

current_reports = sorted(listdir(report_dir), reverse=True)

html_prologue = '<html><head></head><body>'
html_epilogue = '</body></html>'

out = html_prologue

for page in current_reports:
    out += '<a href = "report/' + page + '">' + page + '</a><br />'

out += html_epilogue

i = open('/home/awstlaur/pyret-benchmark-visualization/index.html', 'w')
i.write(out)
i.close()